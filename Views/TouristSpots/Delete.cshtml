@model TourismWeb.Models.TouristSpot

@{
    ViewData["Title"] = "Xóa địa điểm du lịch";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-danger text-white">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                        <h3 class="mb-0">Xác nhận xóa địa điểm du lịch</h3>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="fas fa-exclamation-circle fs-3"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading">Cảnh báo!</h5>
                                <p class="mb-0">Bạn có chắc chắn muốn xóa địa điểm du lịch này? Hành động này không thể hoàn tác.</p>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-4 mb-4 mb-md-0">
                            <div class="image-container border rounded p-2 text-center" style="height: 250px; background-color: #f8f9fa;">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-height: 100%; max-width: 100%; object-fit: contain;" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <span class="text-muted">Không có hình ảnh</span>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="spot-details">
                                <h4 class="text-danger mb-3">@Model.Name</h4>
                                
                                <div class="detail-item mb-3">
                                    <div class="row">
                                        <div class="col-md-4 fw-bold">
                                            <i class="fas fa-map-marker-alt text-primary me-2"></i>Địa chỉ:
                                        </div>
                                        <div class="col-md-8">
                                            @Model.Address
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="detail-item mb-3">
                                    <div class="row">
                                        <div class="col-md-4 fw-bold">
                                            <i class="fas fa-tag text-primary me-2"></i>Danh mục:
                                        </div>
                                        <div class="col-md-8">
                                            @Model.Category.Name
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="detail-item mb-3">
                                    <div class="row">
                                        <div class="col-md-4 fw-bold">
                                            <i class="fas fa-calendar text-primary me-2"></i>Ngày tạo:
                                        </div>
                                        <div class="col-md-8">
                                            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <div class="fw-bold mb-2">
                            <i class="fas fa-align-left text-primary me-2"></i>Mô tả:
                        </div>
                        <div class="p-3 bg-light rounded">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="text-muted">Không có mô tả</span>
                            }
                        </div>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="SpotId" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-danger btn-lg">
                                        <i class="fas fa-trash-alt me-2"></i>Xác nhận xóa
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-danger {
            background: linear-gradient(135deg, #e74a3b 0%, #c0392b 100%);
        }
    </style>
}