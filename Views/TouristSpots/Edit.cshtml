@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const imageUploadInput = document.getElementById('imageUpload');
            const imagePreview = document.getElementById('imagePreview');
            const defaultImageUrl = "/images/default-spotImage.png";
            const imageUrlInput = document.querySelector('input[name="ImageUrl"]');

            imageUploadInput.addEventListener('change', function (e) {
                const file = e.target.files[0];
                const validationSpan = document.getElementById('imageFileValidation');
                validationSpan.textContent = '';

                if (file) {
                    if (file.size > 5 * 1024 * 1024) {
                        validationSpan.textContent = 'File quá lớn (tối đa 5MB).';
                        imageUploadInput.value = '';
                        imagePreview.src = imageUrlInput.value || defaultImageUrl;
                        return;
                    }
                    const allowedExtensions = /\.(jpg|jpeg|png|gif)$/i;
                    if (!allowedExtensions.exec(file.name)) {
                        validationSpan.textContent = 'Chỉ chấp nhận định dạng ảnh: .jpg, .jpeg, .png, .gif.';
                        imageUploadInput.value = '';
                        imagePreview.src = imageUrlInput.value || defaultImageUrl;
                        return;
                    }
                    const reader = new FileReader();
                    reader.onload = function (event) {
                        imagePreview.src = event.target.result;
                    }
                    reader.readAsDataURL(file);
                } else {
                    imagePreview.src = imageUrlInput.value || defaultImageUrl;
                }
            });
        });
    </script>
}