@model TourismWeb.Models.Post

<h2>Đăng Bài Viết</h2>

@if (ViewBag.SuccessMessage != null)
{
    <p style="color: green;">@ViewBag.SuccessMessage</p>
    <a href="/Posts/Index">
        <button>Xem danh sách bài viết</button>
    </a>
}
else
{
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" placeholder="Tiêu đề" required />
            <span asp-validation-for="Title" style="color: red;"></span>
        </div>
        <div>
            <label asp-for="Content"></label>
            <textarea asp-for="Content" placeholder="Nội dung" required></textarea>
            <span asp-validation-for="Content" style="color: red;"></span>
        </div>
        <button type="submit">Đăng bài</button>
    </form>
}