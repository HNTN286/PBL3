    }

    /* Additional styles for the heart, comment and view details icons seen in the image */
    .card-interactions {
        display: flex;
        align-items: center;
        margin-top: 1rem;
        gap: 1rem;
    }

    .interaction-item {
        display: flex;
        align-items: center;
        color: var(--dark-gray);
        font-size: 0.85rem;
    }

    .heart-icon,
    .comment-icon {
