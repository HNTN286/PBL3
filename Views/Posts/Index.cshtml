@model IEnumerable<TourismWeb.Models.Post>

@{
    ViewData["Title"] = "Tất Cả Bài Viết";
}

<!-- Font Awesome (chỉ thêm nếu chưa có trong _Layout.cshtml) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <h2 class="mb-4 text-primary"><i class="fas fa-newspaper me-2"></i>Tất Cả Bài Viết</h2>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success d-flex align-items-center shadow-sm rounded-3">
            <i class="fas fa-check-circle fa-lg me-2"></i>
            <div>@ViewBag.SuccessMessage</div>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Tạo Bài Viết Mới
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>Bạn chưa có bài viết nào. Hãy tạo bài viết mới!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <strong>@item.Title</strong>
                            <span class="badge text-white 
                                @(item.Status == TourismWeb.Models.PostStatus.Approved ? "bg-success" :
                                  item.Status == TourismWeb.Models.PostStatus.Pending ? "bg-warning" : "bg-danger")">
                                @(item.Status == TourismWeb.Models.PostStatus.Approved ? "Đã duyệt" :
                                  item.Status == TourismWeb.Models.PostStatus.Pending ? "Đang chờ duyệt" : "Đã từ chối")
                            </span>
                        </div>
                        <div class="card-body">
                            <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid rounded mb-3 w-100"
                                 style="height: 180px; object-fit: cover;" />
                            <p class="mb-2">
                                <i class="fas fa-map-marker-alt me-1 text-secondary"></i><strong>Địa điểm:</strong> @item.Spot?.Name
                                <br />
                                <i class="fas fa-tag me-1 text-secondary"></i><strong>Loại:</strong> @item.TypeOfPost
                                <br />
                                <i class="fas fa-clock me-1 text-secondary"></i><strong>Ngày tạo:</strong> @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </p>
                            <p class="card-text text-muted small">
                                @(item.Content?.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
                            </p>
                        </div>
                        @if (User.IsInRole("Admin")) {
                        <div class="card-footer text-center">
                            <a asp-action="Details" asp-route-id="@item.PostId" class="btn btn-sm btn-outline-info me-1">
                                <i class="fas fa-eye"></i> Chi tiết
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i> Chỉnh sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.PostId" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </div> }
                    </div>
                </div>
            }
        </div>
    }
</div>