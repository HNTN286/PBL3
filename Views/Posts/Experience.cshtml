@model IEnumerable<TourismWeb.Models.Post>

@{
    ViewData["Title"] = "Trải Nghiệm Du Lịch";
}

<div class="tourism-container">
    <div class="tourism-header">
        <div class="tourism-title">
            <h1>Trải Nghiệm Du Lịch</h1>
            <div class="tourism-divider"></div>
            <p class="tourism-subtitle">Khám phá những trải nghiệm tuyệt vời tại Miền Trung</p>
        </div>

        <div class="tourism-actions">
            @* <div class="search-box">
                <input type="text" placeholder="Tìm kiếm trải nghiệm..." />
                <i class="search-icon"></i>
            </div> *@
            <a asp-action="Create" class="btn-create">
                <span>Thêm Trải Nghiệm Mới</span>
            </a>
        </div>
    </div>

    <div class="tourism-content">
        <!-- Main Content (on the left) -->
        <div class="tourism-main">
            <div class="tourism-grid">
                @foreach (var item in Model)
                {
                    <div class="tourism-card">
                        <div class="card-image-container">
                            <img src="@item.ImageUrl" alt="@item.Title" class="card-image" />
                            <div class="card-category">
                                <span class="palm-icon small-palm"></span>
                                <span>@item.Spot.Name</span>
                            </div>
                            <div class="card-overlay">
                                <a asp-action="Details" asp-route-id="@item.PostId" class="overlay-btn">
                                    <i class="view-icon"></i>
                                </a>
                            </div>
                        </div>
                        <div class="card-content">
                            <h2 class="card-title">@item.Title</h2>
                            <div class="card-meta">
                                <div class="meta-item">
                                    <i class="date-icon"></i>
                                    <span>@item.CreatedAt.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="meta-item">
                                    <i class="user-icon"></i>
                                    <span>@item.User.FullName</span>
                                </div>
                            </div>
                            <p class="card-description">@(item.Content.Length > 150 ? item.Content.Substring(0, 150) + "..."
                                                            : item.Content)</p>
                        <div class="card-actions">
                            <a asp-action="Details" asp-route-id="@item.PostId" class="btn-details">
                                <span>Xem Chi Tiết</span>
                                <i class="arrow-icon"></i>
                            </a>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.PostId" class="btn-edit" title="Sửa">
                                    <i class="edit-icon"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PostId" class="btn-delete" title="Xóa">
                                    <i class="delete-icon"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                                }
            </div>

            <!-- Pagination -->
            <div class="tourism-pagination">
                <a href="#" class="page-link disabled"><i class="prev-icon"></i></a>
                <a href="#" class="page-link active">1</a>
                <a href="#" class="page-link">2</a>
                <a href="#" class="page-link">3</a>
                <a href="#" class="page-link"><i class="next-icon"></i></a>
            </div>
        </div>

        <!-- Sidebar (on the right) -->
        <div class="tourism-sidebar">
            <div class="sidebar-section">
                <h3 class="sidebar-title"><span class="palm-icon star-palm"></span>Trải Nghiệm Nổi Bật</h3>
                <div class="featured-places">
                    @foreach (var item in Model.Take(3))
                    {
                        <div class="featured-place-item">
                            <div class="featured-place-img">
                                <img src="@item.ImageUrl" alt="@item.Title" />
                            </div>
                            <div class="featured-place-info">
                                <h4>@item.Title</h4>
                                <span class="featured-place-category">@item.Spot.Name</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="sidebar-section">
                <h3 class="sidebar-title"><span class="palm-icon filter-palm"></span>Lọc Theo</h3>
                <div class="filter-options">
                    <div class="filter-group">
                        <label>Khu vực</label>
                        <select class="filter-select">
                            <option>Tất cả</option>
                            <option>Đà Nẵng</option>
                            <option>Huế</option>
                            <option>Quảng Nam</option>
                            <option>Quảng Ngãi</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label>Sắp xếp theo</label>
                        <select class="filter-select">
                            <option>Mới nhất</option>
                            <option>Phổ biến nhất</option>
                            <option>A-Z</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="sidebar-section">
                <h3 class="sidebar-title"><span class="palm-icon tag-palm"></span>Thẻ Phổ Biến</h3>
                <div class="tag-cloud">
                    <a href="#" class="tag-item">Du lịch</a>
                    <a href="#" class="tag-item">Biển</a>
                    <a href="#" class="tag-item">Đà Nẵng</a>
                    <a href="#" class="tag-item">Hội An</a>
                    <a href="#" class="tag-item">Huế</a>
                    <a href="#" class="tag-item">Phong Nha</a>
                    <a href="#" class="tag-item">Cù Lao Chàm</a>
                    <a href="#" class="tag-item">Bà Nà</a>
                </div>
            </div>
        </div>
    </div>
</div>

