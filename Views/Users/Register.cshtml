@model TourismWeb.Models.User

@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<style>
    body {
        background: linear-gradient(to right, #ece9e6, #ffffff);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .register-card {
        background: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        width: 575px;
        max-width: 100%;

        margin-top: 30px;
        /* Tạo khoảng cách từ trên xuống */
        margin-bottom: 30px;
        /* Tạo khoảng cách từ dưới lên */

    }

    .register-card h2 {
        text-align: center;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .social-container {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .social-btn {
        width: 150px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 5px;
        color: white;
        text-decoration: none;
        transition: 0.3s;
    }

    .social-btn i {
        margin-right: 8px;
    }

    .btn-facebook {
        background: #1877F2;
    }

    .btn-facebook:hover {
        background: #0d6efd;
    }

    .btn-google {
        background: #DB4437;
    }

    .btn-google:hover {
        background: #c1351d;
    }

    .btn-instagram {
        background: linear-gradient(45deg, #833ab4, #fd1d1d, #fcb045);
    }

    .btn-instagram:hover {
        background: linear-gradient(45deg, #fd1d1d, #833ab4);
    }
</style>


<body>
    <div class="register-card">
        <h2>Đăng Ký</h2>

        @* <form method="post" action="/Users/Register">
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input type="text" name="FullName" class="form-control" placeholder="Họ và Tên" required>
            </div>
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <input type="email" name="Email" class="form-control" placeholder="Email" required>
            </div>
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                <input type="text" name="Username" class="form-control" placeholder="Tên đăng nhập" required>
            </div>
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" name="PasswordHash" id="password" class="form-control" placeholder="Mật khẩu"
                    required>
            </div>
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" name="ConfirmPassword" id="confirmPassword" class="form-control"        
                    placeholder="Nhập lại mật khẩu" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng Ký</button>
        </form> *@

        @if (ViewBag.SuccessMessage != null)
        {
            <p style="color: green;">@ViewBag.SuccessMessage</p>
            <a href="/Users/Login">
                <button class="btn btn-success w-100">Đăng nhập</button>
            </a>
        }
        else
        {
            <form method="post" action="/Users/Register">
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="FullName" class="form-control" placeholder="Họ và Tên" required>
                </div>
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Email" required>
                </div>
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                    <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" required>
                </div>
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input asp-for="PasswordHash" type="password" id="password" class="form-control" placeholder="Mật khẩu" required>
                </div>
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" name="ConfirmPassword" id="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng Ký</button>
            </form>
        }

        <div class="text-center mt-2">
            <small>
                Bằng việc đăng ký, bạn đồng ý với
                <a href="#">Điều khoản dịch vụ</a> và
                <a asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a> của chúng tôi.


            </small>
        </div>

        <div class=" text-center mt-3">
            <span>Hoặc đăng ký bằng</span>
        </div>
        <div class="social-container">
            <a href="#" class="social-btn btn-facebook">
                <i class="fab fa-facebook-f"></i> Facebook
            </a>
            <a href="#" class="social-btn btn-google">
                <i class="fab fa-google"></i> Google
            </a>
            <a href="#" class="social-btn btn-instagram">
                <i class="fab fa-instagram"></i> Instagram
            </a>
        </div>
        <div class="text-center mt-3">
            <a href="/Users/Login">Đã có tài khoản? Đăng nhập</a>
        </div>
    </div>

    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            let password = document.getElementById("password").value;
            let confirmPassword = document.getElementById("confirmPassword").value;
            if (password !== confirmPassword) {
                alert("Mật khẩu nhập lại không trùng khớp!");
                event.preventDefault();
            }
        });
    </script>
</body>
