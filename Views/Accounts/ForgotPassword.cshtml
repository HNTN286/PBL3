@model TourismWeb.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<style>
    .forgot-password-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px 0;
    }

    .forgot-password-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid #e0e0e0;
        overflow: hidden;
        max-width: 450px;
        width: 100%;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #667eea 0%, #4b76a2  100%);
        color: white;
        text-align: center;
        padding: 30px 20px;
    }

    .logo-container {
        margin-bottom: 15px;
    }

    .logo-container img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 3px solid rgba(255, 255, 255, 0.3);
        background: white;
        padding: 5px;
    }

    .card-title-custom {
        font-size: 1.8rem;
        font-weight: 600;
        margin: 0;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .card-body-custom {
        padding: 40px 30px;
    }

    .description-text {
        color: #666;
        margin-bottom: 30px;
        line-height: 1.6;
        text-align: center;
    }

    .form-group-custom {
        margin-bottom: 25px;
    }

    .form-control-custom {
        border: 2px solid #e1e5e9;
        border-radius: 8px;
        padding: 18px 20px;
        font-size: 16px;
        transition: all 0.3s ease;
        background: #fafafa;
        width: 100%;
        min-height: 60px;
        box-sizing: border-box;
    }

    .form-control-custom:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
        background: white;
        outline: none;
    }

    .btn-submit-custom {
        background: linear-gradient(135deg, #667eea 0%, #4b76a2  100%);
        border: none;
        border-radius: 8px;
        padding: 15px;
        font-size: 16px;
        font-weight: 600;
        color: white;
        width: 100%;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(102, 126, 234, 0.3);
    }

    .btn-submit-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(102, 126, 234, 0.4);
        background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
    }

    .btn-submit-custom:active {
        transform: translateY(0);
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }

    .back-link a {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .back-link a:hover {
        color: #5a67d8;
        text-decoration: underline;
    }

    .alert-custom {
        border-radius: 8px;
        border: none;
        padding: 15px;
        margin-bottom: 20px;
        background: #fee;
        color: #c53030;
        border-left: 4px solid #fc8181;
    }

    .validation-error {
        color: #e53e3e;
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .forgot-password-container {
            padding: 10px;
            min-height: 60vh;
        }
        
        .card-header-custom {
            padding: 25px 15px;
        }
        
        .card-body-custom {
            padding: 30px 20px;
        }
        
        .card-title-custom {
            font-size: 1.5rem;
        }
    }
</style>

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="card-header-custom">
            <div class="logo-container">
                <a asp-controller="Home" asp-action="Index">
                    <img src="/images/logo3.jpg" alt="TourismWeb Logo">
                </a>
            </div>
            <h2 class="card-title-custom">Quên Mật Khẩu</h2>
        </div>

        <div class="card-body-custom">
            <p class="description-text">
                Vui lòng nhập địa chỉ email đã đăng ký. Chúng tôi sẽ gửi một liên kết để bạn đặt lại mật khẩu.
            </p>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert-custom" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-error"></div>
                
                <div class="form-group-custom">
                    <input asp-for="Email" 
                           class="form-control-custom" 
                           placeholder="Địa chỉ Email" 
                           type="email" 
                           required />
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>

                <button type="submit" class="btn-submit-custom">
                    Gửi Liên Kết Đặt Lại
                </button>
            </form>

            <div class="back-link">
                <a asp-action="Login" asp-controller="Accounts">← Quay lại Đăng nhập</a>
            </div>
        </div>
    </div>
</div>