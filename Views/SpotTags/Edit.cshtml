@model TourismWeb.Models.SpotTag

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SpotTag</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="SpotId" />
            <input type="hidden" asp-for="TagId" />

            <div class="form-group">
                <label asp-for="Spot.Name" class="control-label">Tourist Spot</label>
                <input class="form-control" value="@Model.Spot.Name" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Tag.Name" class="control-label">Tag</label>
                <input class="form-control" value="@Model.Tag.Name" disabled />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
